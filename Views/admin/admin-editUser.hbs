        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="/admin">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                <li class="nav-item"><a class="nav-link" href="/admin/logOut">LogOut</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">

        <div class="col-md-2 col-lg-1 p-0 d-none d-md-block bg-white border-end">
            <div class="list-group list-group-flush">
                <a href="/admin" class="list-group-item list-group-item-action">Dashboard</a>
                <a href="/admin/userManagement" class="list-group-item list-group-item-action active"
                    aria-current="true">Users</a>
                <a href="/admin/category" class="list-group-item list-group-item-action">Categories</a>
                <a href="/admin/offers" class="list-group-item list-group-item-action">Coupon</a>
                <a href="/admin/productManagement" class="list-group-item list-group-item-action">Products</a>
                <a href="/admin/logOut" class="list-group-item list-group-item-action">LogOut</a>
            </div>
        </div>

        {{#each users}}

        <div class="col-md-10 col-lg-11 py-4">

            <div class="w-25 ps-3 pt-1">
                <h4>Edit User</h4>
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item "><a
                            class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                            href="/admin">Dashboard</a></li>
                    <li class="breadcrumb-item active"><a
                            class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                            href="/admin/userManagement">Users List</a></li>
                    <li class="breadcrumb-item active">Edit Users</li>
                </ol>
            </div>

            <div class="card mx-auto" style="max-width: 600px;">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Edit User</h5>
                    <form method="post" action="/admin/editUserSub">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username"
                                value="{{username}}">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="" placeholder="example@email.com"
                                value="{{email}}" disabled>
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="example@email.com" value="{{email}}" hidden>
                        </div>
                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label">Phone Number </label>
                            <input type="text" class="form-control" id="phoneNumber" name="phoneNumber"
                                placeholder="Enter your phone number" value="{{phoneNumber}}">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="Enter your password" value="{{password}}">
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                                placeholder="Enter your password" value="{{password}}">
                        </div>
                        <div class="mb-3">
                            <button type="button" class="btn btn-status text-danger inactive"
                                id="statusLabel">Status</button>
                            <button type="button" class="btn btn-status active" id="activateBtn">Activate</button>
                            <button type="button" class="btn btn-status inactive" id="blockBtn">Block</button>
                        </div>
                        <div class="mb-3">
                            <input type="text" id="isActive" name="isActive" value="true" hidden>
                            <input type="text" id="isActiveData" value="{{isActive}}" hidden>
                            <input type="text" class="form-control" id="idEdit" placeholder="_id" name="_id"
                                value="{{_id}}" hidden>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="/admin/userManagement"><button type="button"
                                    class="btn btn-outline-secondary">Cancel</button></a>
                            <button type="submit" class="btn btn-danger">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{/each}}

<div hidden>
    <p id="noMatch">{{noMatch}}</p>
</div>


<footer class="bg-dark text-light py-4">
    <div class="container">
        <div class="row1 justify-content-center align-items-center">
            <div class="col-md-6">
                <p class="mb-0">SML Bazaar</p>
            </div>
            <div class="col-md-6 text-md-end">
                <p class="mb-0">Any questions? Let us know in <br>store at Malappuram, Kerala, India<br>9846323495</p>
            </div>
        </div>
    </div>
</footer>

