    {{#each category}}

    <div class="col-md-10 col-lg-11 ps-5 pt-4 pb-5">

      <div class="w-30 pt-1 ps-1">
        <h4>Edit Category</h4>
        <ol class="breadcrumb mb-4">
          <li class="breadcrumb-item "><a
              class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
              href="/admin">Dashboard</a></li>
          <li class="breadcrumb-item active"><a
              class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
              href="/admin/category">Categories List</a></li>
          <li class="breadcrumb-item active">Edit Category</li>
        </ol>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title ">General Information</h5>
          <form action="/admin/editCategorySub" method="post" onsubmit="return validateForm()">
            <div class="mb-3 pt-2">
              <label for="categoryName" class="form-label">Category Name</label>
              <input type="text" id="categoryName" class="form-control" placeholder="Type category name here..."
                name="categoryName" value="{{categoryName}}">
              <input type="text" class="form-control" id="idEdit" placeholder="_id" name="_id" value="{{_id}}" hidden>
              <div id="existCategoryW" class="form-text text-danger"></div>
            </div>
            <div class="mb-3">
                <label for="offer" class="form-label">Description</label>
                <input type="number" id="offer" class="form-control" value="{{offer}}"
                    placeholder="Offer in %" name="offer" min="0" max="100">
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea id="description" class="form-control" rows="2" placeholder="Type category description here..."
                name="description">{{description}}</textarea>
            </div>
            <div class="d-flex justify-content-end">
              <a href="/admin/category"><button type="button" class="btn btn-outline-secondary me-2">Cancel</button></a>
              <button type="submit" class="btn btn-danger">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
