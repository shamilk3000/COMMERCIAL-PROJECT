<div class="container-fluid vh-100 d-flex">
  <div class="row w-100">

    <div class="col-md-6 d-flex flex-column justify-content-center px-5">
      <h1 class="mb-4 text-center">Welcome Back</h1>
      <form method="post" action="/admin/loginsub">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <div class="d-flex">
          <input type="password" class="form-control me-2" id="password" name="password" placeholder="Enter your password" />
           <button class="btn btn-outline-secondary" type="button" id="togglePassword">
              <i class="bi bi-eye-fill"></i>
          </button>
          </div>
          <a href="#" class="d-block mt-2 text-decoration-none">Forgot password?</a>
        </div>
        <button type="submit" class="btn btn-success w-100">Login</button>
      </form>

    </div>

    <div class="col-md-6 d-none d-md-block my-3"
      style="background-image: url('http://127.0.0.1:5000/images/admin/admin-login.jpg'); background-size: contain; background-position: center;background-repeat: no-repeat;">
    </div>

  </div>
</div>
<div hidden>
  <p id="warning">{{warning}}</p>
</div>

<script src="http://127.0.0.1:5000/javascripts/admin/admin-login.js"></script>