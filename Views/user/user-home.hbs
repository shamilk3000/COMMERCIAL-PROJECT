<!-- filter -->
<div class="modal fade" id="filter" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">View Product</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/" method="post" id="filterForm">

                    <div class="mb-3">
                        <label for="search" class="form-label">Name</label>
                        <input type="text" class="form-control" id="search" placeholder="Enter product name" value=""
                            name="name">
                    </div>

                    <div class="mb-3">
                        <label for="size" class="form-label">Size</label>
                        <select class="form-select" id="size" name="size">
                            <option value="undefined" selected>All Sizes</option>
                            <option value="S - Small">S</option>
                            <option value="M - Medium">M</option>
                            <option value="L - Large">L</option>
                            <option value="XL - Extra Large">XL</option>
                            <option value="XXL - Double Large">XXL</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="size" class="form-label">Category</label>
                        <select class="form-select" id="category" name="category">
                            <option value="undefined" selected>All Category</option>
                            {{#each category}}
                            <option value="{{_id}}">{{categoryName}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="brand" class="form-label">Order</label>
                        <select class="form-select" id="order" name="order">
                            <option value="undefined" selected>Null</option>
                            <option value="n-az">Name : A-Z</option>
                            <option value="n-za">Name : Z-A</option>
                            <option value="p-hl">Price : high to low</option>
                            <option value="p-lh">Price : low to high</option>
                            <option value="r-hl">Rating : high to low</option>
                            <option value="r-lh">Rating : low to high</option>
                            <option value="na">New Arraival</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="fs" class="form-label">Stock</label>
                        <select class="form-select" id="fs" name="stock">
                            <option value="undefined" selected>All</option>
                            <option value="in">In Stock</option>
                            <option value="out">Out Of Stock</option>
                        </select>
                    </div>
                    <div>
                        <input type="hidden" value="true" name="filter">
                    </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Apply Filters</button>
                </form>
            </div>
        </div>
    </div>
</div>


