<div class="modal fade" id="editAddressM" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="editAddressLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editAddressLabel">Edit Address</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container mt-4">
                    <form id="editProfile" onsubmit="event.preventDefault(); editProfile();">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">First Name</label>
                                    <input value="{{user.firstName}}" name="firstName" id="firstName" type="text"
                                        class="form-control" placeholder="First name is not added" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Last Name</label>
                                    <input value="{{user.lastName}}" name="lastName" id="lastName" type="text"
                                        class="form-control" placeholder="Last name is not added" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">E-mail</label>
                                    <input value="{{user.email}}" name="email" id="email" type="email"
                                        class="form-control" placeholder="Not Added" readonly />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Username</label>
                                    <input value="{{user.username}}" name="username" id="username" type="text"
                                        class="form-control" placeholder="Not Added" />
                                </div>
                            </div>
                            <div class="col-md-12 d-flex justify-content-center">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Mobile No</label>
                                        <input value="{{user.phoneNumber}}" name="mobile" id="mobile" type="tel"
                                            class="form-control" placeholder="Mobile number is not added" />
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="d-flex justify-content-end align-items-end">
                            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-danger">Edit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

