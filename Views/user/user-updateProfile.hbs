                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-9 p-3 justify-content-center d-flex">
            <div class="col-md-9 mb-4">
                <div id="address">
                    <div class="card card-body">
                        <h5 class="text-center mb-2">Profile</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">First Name</label>
                                    <input value="{{user.firstName}}" name="firstName" id="" type="text"
                                        class="form-control" placeholder="First name is not added" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Last Name</label>
                                    <input value="{{user.lastName}}" name="lastName" id="" type="text"
                                        class="form-control" placeholder="Last name is not added" readonly />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">E-mail</label>
                                    <input value="{{user.email}}" name="email" id="" type="email" class="form-control"
                                        placeholder="Not Added" readonly />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Username</label>
                                    <input value="{{user.username}}" name="username" id="" type="text"
                                        class="form-control" placeholder="Not Added" readonly />
                                </div>
                            </div>
                            <div class="col-md-12 d-flex justify-content-center">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Mobile No</label>
                                        <input value="{{user.phoneNumber}}" name="mobile" id="" type="tel"
                                            class="form-control" placeholder="Mobile number is not added" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end align-items-end">
                                <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editAddressM"
                                    onclick="edit()">
                                    Edit Profile
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

