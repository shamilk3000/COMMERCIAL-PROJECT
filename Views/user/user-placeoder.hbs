                {{#if couponAv}}
                <div class="col-md-6 mb-3 justify-content-center d-flex">
                    <div class="coupon-card">
                        <input type="hidden" value="{{couponAv.couponCode}}" id="couponCode" name="couponCode">
                        <input type="hidden" id="applyed" name="applyed">
                        <div class="coupon-header">ðŸŽ‰ Exclusive Discount!</div>
                        <h5 class="mt-3">Get <span class="text-warning">â‚¹{{couponAv.discountValue}} OFF</span> on Your Purchase!</h5>
                        <p class="offer-details">Use the coupon before <strong>{{formatDate couponAv.expiresAt}}</strong>.</p>

                        <p class="offer-details">Click to Apply at Checkout</p>

                        <button class="btn-apply" id="applyButton" onclick="applyCoupon()">Apply Coupon</button>
                    </div>
                </div>
                {{/if}}

        </div>

        <!-- Order Summary & Payment Section -->
        <div class="col-md-5 my-auto">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Order Total</h5>
                </div>
                <div class="card-body">
                    {{#each productsData}}
                    <div class="d-flex justify-content-between">
                        <p>{{name}} ({{size}}-{{selectedColor}}) x {{quantity}}</p>
                        <p class="fw-bold">{{offerPrice}} x {{quantity}} = â‚¹{{totalPrice}}</p>
                    </div>
                    {{/each}}
                    <div class="d-flex justify-content-between">

                        <p id="couponH"></p>
                        <p class="fw-bold" id="couponD"></p>
                    </div>
                    <div class=" justify-content-between" id="showDel" style="display: none;" >

                        <input type="hidden" name="deliveryCharge" id="deliveryCharge" value="false">
                        <p>Delivery Charge</p>
                        <p class="fw-bold"> + â‚¹100 </p>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between fw-bold">
                        <p>Total</p>
                        <p>â‚¹<span id="total">{{totalAmount}}</span></p>
                    </div>
                </div>
            </div>

            <!-- Payment Section -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Payment</h5>
                </div>
                <div class="card-body">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="payment" id="upi" value="upi">
                        <label class="form-check-label" for="upi">Online Payment</label>
                    </div>
                    <div class="form-check" id="showWallet" hidden>
                        <input class="form-check-input" type="radio" name="payment" id="wallet" value="wallet">
                        <label class="form-check-label" for="wallet">Wallet</label>
                    </div>
                    <div class="form-check" id="showCOD" hidden>
                        <input class="form-check-input" type="radio" name="payment" id="cod" value="COD">
                        <label class="form-check-label" for="cod">Cash On Delivery</label>
                    </div>
                </div>
            </div>

            <!-- Place Order Button -->
            <div class="mt-3">
                <button type="submit" class="btn btn-danger w-100 py-2">Place Order</button></form>
            </div>
        </div>
