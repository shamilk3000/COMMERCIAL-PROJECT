<div class="container my-5">
    <div class="row">
        <!-- Billing Address Section -->
        <div class="col-md-7">
            <h4>Billing Address</h4>
            <label class="form-label ms-2 toHide">Use Existing Address : </label>
            <div class="form-check row mb-3 d-flex gap-0 ps-1 toHide" id="selectAdrs">
                {{!-- address check box varum --}}
            </div>
            <div class="d-flex justify-content-center">
            <button class="btn btn-danger rounded-pill shadow-lg px-3 py-2 mb-3 " type="button" 
                data-bs-toggle="collapse" data-bs-target="#addressForm" 
                aria-expanded="false" aria-controls="addressForm">
            âž• Add Address
            </button>
            </div>

            <div class="collapse mt-3" id="addressForm">
            <form method="post" action="/placeOderSub" id="placeOderSub">
                <div class="row">
                    <input type="hidden" name="from" value="{{cart}}">
                    <input type="hidden" id="productsData" name="productsData" value="{{json productsData}}">
                    <input type="hidden" id="totalAmount" name="totalAmount" value="{{totalAmount}}">
                    <input type="hidden" id="actualTotalAmount" name="actualTotalAmount" value="{{actualTotalAmount}}">
                    <input type="hidden" id="payment" name="paymentType" value="">
                    <input type="hidden" id="paymentDetails" name="paymentDetails" value="">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-control" placeholder="Enter first name" name="firstName"
                            id="firstName">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-control" placeholder="Enter last name" name="lastName"
                            id="lastName">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">E-mail</label>
                        <input type="email" class="form-control" placeholder="Enter email" name="email" id="email">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Mobile No</label>
                        <input type="tel" class="form-control" placeholder="Enter mobile number" name="mobile"
                            id="mobile">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Pincode</label>
                        <input type="text" class="form-control" placeholder="Enter pincode" name="pincode" id="pincode">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Flat, House no., Building, Apartment</label>
                        <input type="text" class="form-control" placeholder="Enter address details" name="address"
                            id="address">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Area, Street, Sector, Village</label>
                        <input type="text" class="form-control" placeholder="Enter area details" name="area" id="area">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Landmark</label>
                        <input type="text" class="form-control" placeholder="Enter landmark" name="landmark"
                            id="landmark">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Town/City</label>
                        <input type="text" class="form-control" placeholder="Enter town or city" name="city" id="city">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">State</label>
                        <input type="text" class="form-control" placeholder="Enter state" name="state" id="state">
                    </div>
                </div>
                </div>

                {{!-- <div class="col-md-6 mb-3">
                    <label class="form-label">Coupon code:</label>
                    <div class="d-flex">
                        <input type="hidden" id="applyed" name="applyed">
                        <input type="number" class="form-control me-2" placeholder="Enter coupon code" id="couponCode"
