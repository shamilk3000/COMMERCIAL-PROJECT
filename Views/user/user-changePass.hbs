        <!-- Main Content -->
        <div class="col-md-9 col-lg-9 p-3 justify-content-center d-flex">
            <div class="col-md-9 mb-4 ">
                <div id="address">
                    <div class="card card-body">
                        <h5 class="text-center mb-2">Change Password</h5>
                        <form id="editPass" onsubmit="event.preventDefault(); editPass();">
                            <div class="row">

                                <div class="col-md-12 d-flex justify-content-center">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">New Password</label>
                                            <div class="d-flex">
                                            <input name="password" id="password" type="password" class="form-control me-2"
                                                placeholder="Password">
                                            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                                <i class="bi bi-eye-fill"></i>
                                            </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3 ms-3">
                                            <label class="form-label">Confirm Password</label>
                                            <input name="confirmpassword" id="confirmpassword" type="password"
                                                class="form-control" placeholder="Confirm Password">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="d-flex justify-content-end align-items-end">
                                <button type="submit" class="btn btn-danger">Edit</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
