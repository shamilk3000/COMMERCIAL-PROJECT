<!-- Overlay for closing sidebar -->
<div class="menu-overlay" id="menuOverlay"></div>


<section class="pb-2 bg-lig">
    <div class="container-fluid pb-2  border border-dark-subtle">
        <div class="px-5 mt-3">
            <h2 class="mb-4 text-center">WISHLIST</h2>

        </div>
    </div>
    </div>


    <div class="container-fluid bg-wh mt-5">
        <div class="row justify-content-center gap-auto p-3">





            <div id="allProductsDiv" class="product-div">
                <div class="row justify-content-center gap-auto">

                    {{#if noItem}}
                    <div class="alert alert-warning d-flex justify-content-center align-items-center my-3 py-5 "
                        role="alert">
                        <h5 class="my-4">No items in your wishlist.</h5>
                    </div>
                    <div class="d-flex justify-content-center align-items-center py-3">
                        <a href="/"><button type="button" class="btn btn-outline-success">Continue Shopping</button></a>
                    </div>
                    {{else}}
                    {{#each items}}
                    <div class="col-md-3">
                        <div class="product-card my-3 bg-light position-relative p-3 pt-1 border rounded shadow-sm">
                            <!-- Close Button -->
                            <div class="d-flex justify-content-end">
                                <button class="btn-close " aria-label="Remove"
                                    onclick="removeFromWishlist('{{productId}}')">
                                </button>
                            </div>

                            <a href="/productSingle?id={{productId}}" class="text-decoration-none">
                                <div class="product-img-container">
                                    <img src="{{singleimageConver image}}" alt="Product" class="img-fluid rounded">
                                </div>
                                <div class="product-title fw-bold text-dark mt-2">{{name}} ({{size}})</div>
                                <div class="product-price text-primary fw-semibold">&#8377;{{price}}</div>
                            </a>
                        </div>
                    </div>
                    {{/each}}
                    {{/if}}
                </div>
            </div>


        </div>
    </div>
    </div>
</section>








<div hidden>
    <p id="button">{{button}}</p>
    <p id="completed">{{completed}}</p>
</div>

