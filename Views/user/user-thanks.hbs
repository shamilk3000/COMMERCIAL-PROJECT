        <!-- Home Icon -->
    </ul>
</div>

<!-- Overlay for closing sidebar -->
<div class="menu-overlay" id="menuOverlay"></div>

<div class="container my-4">
    <div class="alert alert-success d-flex align-items-center" role="alert">
        <img class="object-fit-sm-contain me-3" style="width: 5%;"
            src="/images/user/user-thankyou.png" alt="" />
        <div>
            <strong>Thank you for your order!</strong>
            <p>Order : {{order._id}}</p>
        </div>
    </div>

    <div class="mb-3">
        <h5>Delivery</h5>
        <p>{{order.address.firstName}}
            {{order.address.lastName}},
            {{order.address.address}},
            {{order.address.area}},
            {{order.address.pincode}},
            {{order.address.city}},
            {{order.address.state}}</p>
    </div>

    <div class="mb-3">
        <h5>Time</h5>
        <p>{{order.createdAt}}</p>
    </div>

    <div class="mb-3">
        <h5>Payment</h5>
        {{#if (eq order.paymentId.method "COD")}}
        <p>Cash on delivery</p>
        {{else}}
        {{#if (eq order.paymentId.method "upi")}}
        <p>Online Payment</p>
        {{else}}
        {{#if (eq order.paymentId.method "wallet")}}
        <p>Wallet</p>
        {{/if}}
        {{/if}}
        {{/if}}
    </div>
    {{!-- {{#if couponAvailable}}
    <div class="alert alert-success">
        <h5>ðŸŽ‰ Congratulations! {{message}}</h5>
        <p>Use the coupon now or find it in your personal account.</p>
